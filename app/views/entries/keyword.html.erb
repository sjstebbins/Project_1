<%end%>


<h3 id="info"> Info </h3>
<% i = 0 %>
<% while i < 3 do %>
  <div class="search">
    <h4 class="wikititle"><%= @wiki_titles[0 + i] %></h4><br>
     <p class="wikisnippet"><%= strip_tags(@wiki_snippet[0 + i]) %></p><br>
  </div>
<% i += 1 %>
<%end %>




