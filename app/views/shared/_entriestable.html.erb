<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Transcript</th>
      <th>Keywords</th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.created_at.to_date %><br></td>
        <td><%= entry.input[0..300]+"..." %></td>
        <td><%= entry.keywords %></td>
        <td style="font-weight: bold;"><%= link_to 'Show', entry %></td>
        <td style="font-weight: bold;"><%= link_to 'Delete', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>
