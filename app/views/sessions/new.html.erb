<h3 style="margin-left: 30px; margin-top:30px">Login!</h3>


<%= form_tag sessions_path do %>
  <%= label_tag :email %>
  <%= text_field_tag :email %>

  <%= label_tag :password %>
  <%= password_field_tag :password %>
<fieldset>
  <%= submit_tag :login %>
  <label><input type="checkbox" name="login_remember" id="login_remember"> Stay signed in</label>
</fieldset>
  <br><br>  <%= link_to "Create New User", new_user_path %>
<% end %>
